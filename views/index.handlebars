<center>

<img width="400px" src="https://raw.githubusercontent.com/hkhuu1011/burger/master/public/assets/img/burger.jpg">

<h1>Eat-Da-Burger!</h1>

<!-- Data gets passed via server.js from this point forward. -->

<!-- Burger Uneaten -->
<ul style="list-style-type:none">
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>
	 		{{this.burger_name}}
	 			<form action="/{{this.id}}?_method=PUT" method="POST">
				<input type="hidden"
				 name="devoured"
				 value="true">
				<button class="btn btn-primary"  type="submit">Devour it!</button>
				</form>


	 		</li>
	 	{{/unless}}
	{{/each}}
</ul>

<!-- Devoured -->
<ul style="list-style-type:none">
	{{#each burgers}}
		{{#if this.devoured}}
			<li>
	 		{{this.burger_name}}
	 		</li>
	 	{{/if}}
	{{/each}}
</ul>



<h2>Add a Burger</h2>
<p>Enter a burger you want to eat.</p>

{{!-- Form should send a post command to the server --}}
<form class="create-form" method="post" action="/">
<div class="form-group">
   <label for="quo"></label>
   <textarea id="quo" name="burger" rows="4" cols="40"></textarea>
  </div>

  <button type="submit" id="submit">Submit</button>

</form>


</center>